    "@phosphor-icons/core": "^2.1.1",
    "@portabletext/toolkit": "^4.0.0",
    "@portabletext/types": "^3.0.0",
    "@sanity/astro": "^3.2.10",
    "@sanity/blueprints": "^0.6.0",
    "@sanity/client": "^7.13.0",
    "@sanity/code-input": "^6.0.3",
    "@sanity/functions": "^1.1.0",
    "@sanity/image-url": "^1.2.0",
    "@sanity/visual-editing": "^4.0.2",
    "@spotlightjs/astro": "^3.2.6",
    "astro": "^5.16.0",
    "astro-portabletext": "^0.12.0",
    "atuin": "^0.2.0",
    "cache": "^3.0.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "easymde": "^2.20.0",
    "marked": "^17.0.1",
    "mdast-util-from-markdown": "^2.0.2",
    "sanity": "^4.18.0",
    "sanity-plugin-markdown": "^6.0.0",
