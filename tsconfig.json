{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "types": ["astro/client"],
    "skipLibCheck": true,
    "paths": {
      "astro-portabletext": ["types/astro-portabletext"]
    }
  },
  "include": ["src", "types", "astro.config.mjs", "*.config.*", "tsconfig.json"],
  "exclude": ["dist", "node_modules"]
}
