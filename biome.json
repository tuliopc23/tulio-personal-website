{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/components/**/*.ts",
      "src/components/**/*.tsx",
      "src/components/**/*.js",
      "src/components/**/*.jsx",
      "src/components/**/*.astro",
      "src/layouts/**/*.ts",
      "src/layouts/**/*.tsx",
      "src/layouts/**/*.astro",
      "src/pages/**/*.ts",
      "src/pages/**/*.tsx",
      "src/pages/**/*.astro",
      "src/lib/**/*.ts",
      "src/lib/**/*.tsx",
      "src/utils/**/*.ts",
      "src/utils/**/*.tsx",
      "src/data/**/*.ts",
      "src/scripts/**/*.js",
      "src/scripts/**/*.ts",
      "src/sanity/**/*.ts",
      "src/sanity/**/*.tsx",
      "*.config.ts",
      "*.config.mjs"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noConsole": "off",
        "noDebugger": "error",
        "noDoubleEquals": "error"
      },
      "style": {
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "noInferrableTypes": "warn",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "warn",
        "useConst": "warn",
        "useExportType": "warn",
        "useImportType": "warn"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "recommended": true,
        "noAutofocus": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "globals": [
      "Astro",
      "astroHTML",
      "HTMLInputElement",
      "HTMLAnchorElement",
      "HTMLElement",
      "Document",
      "Window",
      "NodeJS"
    ]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    }
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "formatter": {
        "enabled": true
      },
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off",
            "noUndeclaredVariables": "off"
          },
          "style": {
            "useConst": "off",
            "useImportType": "off",
            "useExportType": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      },
      "assist": {
        "actions": {
          "source": {
            "organizeImports": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.svelte", "**/*.vue"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          },
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    },
    {
      "includes": ["*.test.ts", "*.test.tsx", "*.spec.ts", "*.spec.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["src/scripts/**/*.js", "**/*.config.js", "**/*.config.ts", "**/*.config.mjs"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          },
          "correctness": {
            "noUndeclaredVariables": "off",
            "noInnerDeclarations": "off"
          },
          "style": {
            "noParameterAssign": "off"
          }
        }
      }
    },
    {
      "includes": ["src/env.d.ts", "**/*.d.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          },
          "style": {
            "useImportType": "off"
          }
        }
      }
    },
    {
      "includes": ["src/data/**/*.ts", "src/lib/**/*.ts", "src/utils/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "useIterableCallbackReturn": "off"
          }
        }
      }
    }
  ]
}
