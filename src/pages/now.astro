---
import Base from "../layouts/Base.astro";

const siteOrigin =
  Astro.site?.origin ?? Astro.url?.origin ?? "https://www.tuliocunha.dev";
const canonical = new URL("/now/", siteOrigin).toString();
const description = "What Tulio Cunha is currently focusing on.";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: "Now — Tulio Cunha",
  description,
  url: canonical,
};
---

<Base
  title="Now"
  description={description}
  canonical={canonical}
  ogDescription={description}
  ogImage={{ url: "/terminal-favicon.svg", alt: "Tulio Cunha current focus" }}
  structuredData={structuredData}
  sidebar={true}
>
  <section class="container prose">
    <h1>Now</h1>
    <p>What I’m focused on this month.</p>
  </section>
</Base>
