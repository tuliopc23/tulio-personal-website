---
import Base from "../layouts/Base.astro";
import "../styles/section.css";
import Card from "../components/Card.astro";
import ProfileCard from "../components/ProfileCard.astro";
---

<Base title="Home" sidebar={true}>
  <section class="hero container">
    <h1 class="hero__title">Hi, I'm Tulio Cunha.</h1>
    <p class="hero__subtitle">
      Full stack developer crafting native and web tools with calm detail and reliable
      execution.
    </p>
  </section>

  <section class="container home__section">
    <ProfileCard
      name="Tulio Cunha"
      title="Full Stack Developer"
      location="Brazil"
      email="contact@tuliocunha.dev"
    />
    <div class="home__quickLinks">
      <Card
        title="Projects"
        body="Native apps, system tools, and modern web experiments."
        href="/projects"
        tint="teal"
        icon="projects"
        cta="See projects →"
      />
      <Card
        title="Blog"
        body="Notes on engineering, experiences, products, tastes, and tips worth sharing."
        href="/blog/"
        tint="indigo"
        icon="blog"
        cta="Browse the journal →"
      />
    </div>
  </section>

  <section class="container">
    <h2 class="section-title">Tech stack</h2>
    <div class="cardGrid">
      <Card
        title="Swift"
        body="Native macOS and iOS development."
        href="#"
        tint="orange"
        icon="swift"
        cta=""
      />
      <Card
        title="TypeScript"
        body="Structured web applications."
        href="#"
        tint="blue"
        icon="typescript"
        cta=""
      />
      <Card
        title="Rust"
        body="Systems programming with safety."
        href="#"
        tint="brown"
        icon="rust"
        cta=""
      />
      <Card
        title="Zig"
        body="Low-level ergonomics and performance."
        href="#"
        tint="yellow"
        icon="zig"
        cta=""
      />
      <Card
        title="Go"
        body="Backend services and tooling."
        href="#"
        tint="cyan"
        icon="go"
        cta=""
      />
      <Card
        title="React"
        body="Component-driven UI."
        href="#"
        tint="cyan"
        icon="react"
        cta=""
      />
    </div>
  </section>

  <section class="container">
    <h2 class="section-title">Featured writing</h2>
    <div class="cardGrid">
      <Card
        title="Liquid glass on the web"
        body="How to recreate Apple’s materials with CSS blur, transparency, and borders."
        href="/blog/liquid-glass"
      />
      <Card
        title="Sidebar UX like Apple Docs"
        body="Sticky sections, quick filter, and semantics."
        href="/blog/sidebar-ux"
      />
      <Card
        title="System font stacks"
        body="Use -apple-system and friends correctly."
        href="/blog/system-fonts"
      />
    </div>
  </section>
</Base>
