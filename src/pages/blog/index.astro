---
import Base from "../../layouts/Base.astro";
import PostCard from "../../components/PostCard.astro";

const posts = await Astro.glob("../../content/blog/*.mdx");
const sorted = posts.sort(
  (a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date)
);
---

<Base title="Blog" sidebar={true}>
  <section class="container">
    <h1 class="hero__title">Blog</h1>
    <p class="hero__subtitle">
      Articles on UI engineering, Astro, and Appleâ€‘flavored web design.
    </p>
  </section>

  <section class="container">
    <div class="cardGrid">
      {
        sorted.map((p) => (
          <PostCard
            href={p.url}
            title={p.frontmatter.title}
            summary={p.frontmatter.summary}
            date={new Date(p.frontmatter.date).toLocaleDateString()}
          />
        ))
      }
    </div>
  </section>
</Base>
