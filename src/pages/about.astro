---
import Base from "../layouts/Base.astro";

const siteOrigin =
  Astro.site?.origin ?? Astro.url?.origin ?? "https://www.tuliocunha.dev";
const canonical = new URL("/about/", siteOrigin).toString();
const description =
  "Tulio Cunha is a full stack developer blending native craft with web precision.";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  name: "About Tulio Cunha",
  description,
  url: canonical,
};
---

<Base
  title="About"
  description={description}
  canonical={canonical}
  ogDescription={description}
  ogImage={{ url: "/terminal-favicon.svg", alt: "About Tulio Cunha" }}
  structuredData={structuredData}
  sidebar={true}
>
  <section class="container prose">
    <h1>About</h1>
    <p>
      This website uses an Appleâ€‘like docs aesthetic: translucent materials, hairline
      borders, and precise type hierarchy.
    </p>
  </section>
</Base>
