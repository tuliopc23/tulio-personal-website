---
import { Image } from "astro:assets";
import IconTile from "./IconTile.astro";
import PageIndicator from "./PageIndicator.astro";
import ScrollIndicator from "./ScrollIndicator.astro";
import ScrollHint from "./ScrollHint.astro";
import AvatarSrc from "../assets/avatar.png";

const {
  name = "Tulio Cunha",
  title = "Full Stack Developer",
  location = "Brazil",
  email = "contact@tuliocunha.dev",
} = Astro.props;

const socialRailIdDesktop = "profile-card-social-rail-desktop";
const socialRailIdMobile = "profile-card-social-rail-mobile";
const encodedLocation = encodeURIComponent(location);
const locationHref = `https://maps.apple.com/?q=${encodedLocation}`;
const socialCtas = [
  {
    title: "GitHub",
    description: "Peek at the experiments I'm shipping each week.",
    href: "https://github.com/tuliopc23",
    icon: "profile-github",
    tint: "indigo",
    ariaLabel: "Visit Tulio on GitHub",
  },
  {
    title: "Portfolio",
    description: "Browse the macOS-inspired work I've delivered for clients.",
    href: "https://portfolio.tuliocunha.dev",
    icon: "profile-portfolio",
    tint: "cyan",
    ariaLabel: "Explore Tulio's portfolio",
  },
  {
    title: "Instagram",
    description: "Catch behind-the-scenes product snapshots and motion tests.",
    href: "https://instagram.com/tuliopinheirocunha",
    asset: "/icons/Socials/instagram-light.svg",
    tint: "pink",
    ariaLabel: "Follow Tulio on Instagram",
  },
  {
    title: "LinkedIn",
    description: "Stay in the loop on product updates and roles I'm chasing.",
    href: "https://linkedin.com/in/tuliopinheirocunha",
    asset: "/icons/Socials/linkedin-light.svg",
    tint: "blue",
    ariaLabel: "Connect with Tulio on LinkedIn",
  },
  {
    title: "Book a meeting",
    description: "Reserve a 30-minute slot to jam on your product roadmap.",
    href: "https://fantastical.app/tuliopinheirocunha",
    asset: "/icons/Socials/calendar-light.svg",
    tint: "orange",
    ariaLabel: "Book a meeting with Tulio",
  },
  {
    title: "Fiverr",
    description: "Spin up scoped engagements or retainers through my Fiverr studio.",
    href: "https://www.fiverr.com/placeholder",
    icon: "profile-fiverr",
    tint: "green",
    ariaLabel: "Work with Tulio via Fiverr",
  },
];

const contactCards = [
  {
    label: "Email",
    value: "Tap to write",
    href: `mailto:${email}`,
    tint: "indigo",
    asset: "/icons/Socials/Email.webp",
    ariaLabel: `Email ${name}`,
  },
  {
    label: "Location",
    value: location,
    href: locationHref,
    tint: "cyan",
    asset: "/icons/Socials/Location.svg",
    ariaLabel: `Open ${name}'s location in Maps`,
  },
];
---

<section
  class="profileCard"
  aria-label={`Profile information for ${name}`}
  data-reveal
  data-reveal-group="profile-card"
  data-reveal-order="0"
>
  <div class="profileCard__media">
    <figure class="profileCard__photo">
      <Image
        src={AvatarSrc}
        alt={name}
        width={196}
        height={196}
        loading="eager"
        decoding="async"
      />
    </figure>
  </div>
  <div class="profileCard__content">
    <header class="profileCard__header">
      <p class="profileCard__eyebrow">Building native and web products</p>
      <h2 class="profileCard__name">{name}</h2>
      <p class="profileCard__title">{title}</p>
    </header>

    <div
      class="profileCard__contactArea"
      aria-label="Primary contact methods"
      role="navigation"
      data-reveal
      data-reveal-group="profile-card"
      data-reveal-order="0.5"
    >
      <div class="profileCard__contactList">
        {
          contactCards.map((card, index) => (
            <a
              class="card profileCard__contactCard"
              href={card.href}
              target={card.label === "Location" ? "_blank" : undefined}
              rel={card.label === "Location" ? "noreferrer noopener" : undefined}
              aria-label={card.ariaLabel}
              data-reveal
              data-reveal-group="profile-card"
              data-reveal-order={`0.5.${index}`}
            >
              <div class="card__inner profileCard__contactInner">
                <span class="profileCard__contactIcon" aria-hidden="true">
                  <IconTile tint={card.tint} label={card.label} asset={card.asset} />
                </span>
                <span class="profileCard__contactCopy">
                  <span class="profileCard__contactHeading">{card.label}</span>
                  <span class="profileCard__contactValue">{card.value}</span>
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>

    <p class="profileCard__summary">
      I'm a full stack developer who spends my days tinkering with high- and low-level
      programming to solve my problemsâ€”and yours if you let me.
    </p>

    <div
      class="profileCard__socialArea profileCard__socialArea--desktop"
      aria-label="Ways to reach Tulio"
      role="navigation"
      data-reveal
      data-reveal-group="profile-card"
      data-reveal-order="1"
    >
      <div
        id={socialRailIdDesktop}
        class="profileCard__socials profileCard__socials--desktop"
      >
        {
          socialCtas.map((cta, index) => (
            <a
              class="card profileCard__socialCard"
              href={cta.href}
              target="_blank"
              rel="noreferrer noopener"
              aria-label={cta.ariaLabel}
              data-reveal
              data-reveal-group="profile-card"
              data-reveal-order={`1.${index}`}
            >
              <div class="card__inner">
                <IconTile
                  tint={cta.tint}
                  label={cta.title}
                  icon={cta.icon ?? null}
                  asset={cta.asset ?? null}
                />
                <div class="card__content">
                  <div class="card-title profileCard__socialTitle">{cta.title}</div>
                  <p class="card-body profileCard__socialBody">{cta.description}</p>
                </div>
              </div>
            </a>
          ))
        }

        <ScrollIndicator
          containerClass="profileCard__scrollIndicator"
          ariaLabel="Scroll to explore profile links"
        />
      </div>

      <PageIndicator
        containerSelector={`#${socialRailIdDesktop}`}
        itemSelector=".profileCard__socialCard"
        ariaLabel="Profile social links navigation"
      />
    </div>
  </div>
</section>

<div
  class="profileCard__socialArea profileCard__socialArea--mobile"
  aria-label="Ways to reach Tulio"
  role="navigation"
>
  <h2 class="profileCard__socialHeading">Socials</h2>
  <ScrollHint target={`#${socialRailIdMobile}`} className="profileCard__scrollHint" />
  <div
    id={socialRailIdMobile}
    class="profileCard__socials profileCard__socials--mobile cardRail"
    data-reveal
    data-reveal-group="profile-card"
    data-reveal-order="2"
  >
    {
      socialCtas.map((cta, index) => (
        <a
          class="card profileCard__socialCard"
          href={cta.href}
          target="_blank"
          rel="noreferrer noopener"
          aria-label={cta.ariaLabel}
          data-reveal
          data-reveal-group="profile-card"
          data-reveal-order={`2.${index}`}
        >
          <div class="card__inner">
            <IconTile
              tint={cta.tint}
              label={cta.title}
              icon={cta.icon ?? null}
              asset={cta.asset ?? null}
            />
            <div class="card__content">
              <div class="card-title">{cta.title}</div>
              <p class="card-body profileCard__socialBody">{cta.description}</p>
            </div>
          </div>
        </a>
      ))
    }
  </div>

  <ScrollIndicator
    containerClass="profileCard__scrollIndicator"
    ariaLabel="Scroll to explore profile links"
  />

  <PageIndicator
    containerSelector={`#${socialRailIdMobile}`}
    itemSelector=".profileCard__socialCard"
    ariaLabel="Profile social links navigation"
  />
</div>

<style>
  .profileCard {
    position: relative;
    display: grid;
    grid-template-columns: clamp(150px, 16vw, 180px) 1fr;
    gap: clamp(var(--space-md), 3vw, var(--space-lg));
    padding: clamp(var(--space-sm), 3vw, var(--space-lg));
    border-radius: var(--radius-lg);
    border: 1px solid var(--panel-border);
    max-width: 100%;
    box-shadow: var(--shadow-card);
    isolation: isolate;
    z-index: 10;
    backdrop-filter: blur(0px);
    transition:
      transform var(--motion-duration-sm) var(--motion-spring-out),
      box-shadow var(--motion-duration-sm) var(--motion-ease-out),
      border-color var(--motion-duration-sm) var(--motion-ease-out);
    will-change: transform, box-shadow, border-color;
  }

:global(:global([data-theme="dark"])) .profileCard {
    background: rgba(29, 29, 32, 1) !important;
    background-image: none !important;
    border: 1px solid rgba(255, 255, 255, 0.106);
  }

  :global(:global([data-theme="light"])) .profileCard {
    background: rgba(248, 248, 251, 1) !important;
    border: 1px solid rgba(60, 60, 67, 0.106);
  }

  /* Inset highlight for depth - disabled in dark mode for brand consistency */
  :global(:global([data-theme="dark"])) .profileCard::before {
    content: none !important;
    display: none !important;
  }

  :global(:global([data-theme="light"])) .profileCard::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    pointer-events: none;
    z-index: 1;
  }

  .profileCard:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-card-hover);
  }

  :global(:global([data-theme="dark"])) .profileCard:hover {
    border-color: rgba(255, 255, 255, 0.158);
  }

  :global(:global([data-theme="light"])) .profileCard:hover {
    border-color: rgba(60, 60, 67, 0.158);
  }

  .profileCard__media {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    position: relative;
  }

  /* Gradient disabled in dark mode for brand consistency with ArticleCard */
  :global([data-theme="dark"]) .profileCard__media::before {
    content: none !important;
    display: none !important;
  }

  /* Light mode: subtle top-only gradient */
  :global([data-theme="light"]) .profileCard__media::before {
    content: "";
    position: absolute;
    inset: clamp(-32px, -6vw, -18px);
    border-radius: 48px;
    opacity: 0.5;
    filter: blur(42px);
    z-index: 0;
    pointer-events: none;
    background:
      radial-gradient(
        circle at 25% 20%,
        rgba(0, 113, 227, 0.36) 0%,
        transparent 60%
      ),
      radial-gradient(
        circle at 70% 80%,
        rgba(94, 196, 204, 0.28) 0%,
        transparent 70%
      );
    opacity: 0.6;
    filter: blur(48px);
  }

  .profileCard__photo {
    position: relative;
    width: clamp(124px, 16vw, 172px);
    height: clamp(124px, 16vw, 172px);
    border-radius: 22px;
    border: 1px solid var(--panel-border);
    overflow: hidden;
    margin: 0;
    z-index: 1;
    box-shadow: var(--shadow-card);
  }

  /* === Apple HIG Photo Ring Glow === */
  .profileCard__photo::before {
    content: "";
    position: absolute;
    inset: -12%;
    border-radius: inherit;
    background: linear-gradient(
      160deg,
      rgba(96, 156, 255, 0.42),
      rgba(24, 52, 140, 0.18)
    );
    filter: blur(32px);
    opacity: 0.8;
    pointer-events: none;
    z-index: -1;
    transition: opacity var(--motion-duration-sm) var(--motion-ease-out),
                filter var(--motion-duration-sm) var(--motion-ease-out);
  }

  .profileCard:hover .profileCard__photo::before {
    opacity: 1;
    filter: blur(40px);
  }

  :global([data-theme="dark"]) .profileCard__photo {
    background: rgba(29, 29, 32, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  :global([data-theme="light"]) .profileCard__photo {
    background: rgba(248, 248, 251, 1) !important;
    border: 1px solid rgba(60, 60, 67, 0.106);
  }

  :global([data-theme="light"]) .profileCard__photo::before {
    background: linear-gradient(
      160deg,
      rgba(0, 113, 227, 0.35),
      rgba(20, 45, 120, 0.15)
    );
    opacity: 0.6;
  }

  :global([data-theme="light"]) .profileCard:hover .profileCard__photo::before {
    opacity: 0.8;
  }

  /* Photo overlay - disabled in dark mode for flat elevated surface */
  :global([data-theme="dark"]) .profileCard__photo::after {
    content: none !important;
    display: none !important;
  }

  :global([data-theme="light"]) .profileCard__photo::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 30% 20%,
      rgba(255, 255, 255, 0.28),
      transparent 60%
    );
    pointer-events: none;
  }

  .profileCard__photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profileCard__content {
    display: grid;
    gap: clamp(var(--space-sm), 2vw, var(--space-md));
  }

  .profileCard__header {
    display: grid;
    gap: var(--space-xxs);
  }

  .profileCard__eyebrow {
    margin: 0;
    font-size: var(--fs--2);
    font-weight: 500; /* Medium - eyebrow label hierarchy */
    letter-spacing: var(--ls-eyebrow); /* 0.06em HIG standard */
    text-transform: uppercase;
  }

  :global([data-theme="dark"]) .profileCard__eyebrow {
    color: rgba(235, 235, 245, 0.58);
  }

  :global([data-theme="light"]) .profileCard__eyebrow {
    color: rgba(60, 60, 67, 0.58);
  }


  .profileCard__name {
    margin: 0;
    font-size: clamp(26px, 1.8vw + 16px, 36px); /* Reduced max from 38px */
    font-weight: 700;
    letter-spacing: -0.020em;
    color: var(--text);
    line-height: 1;
  }

  .profileCard__title {
    margin: 0;
    font-size: 17px;
    font-weight: 500;
  }

  :global([data-theme="dark"]) .profileCard__title {
    color: rgba(235, 235, 245, 0.75);
  }

  :global([data-theme="light"]) .profileCard__title {
    color: rgba(60, 60, 67, 0.75);
  }

  .profileCard__contactArea {
    display: grid;
    gap: clamp(var(--space-xs), 1.2vw, var(--space-sm));
  }

  .profileCard__contactList {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: clamp(var(--space-xs), 1vw, var(--space-sm));
  }

  .profileCard__contactCard {
    padding: clamp(var(--space-xs), 1.6vw, var(--space-sm))
      clamp(var(--space-sm), 1.8vw, var(--space-md));
    border-radius: var(--radius-md);
    min-height: auto;
  }

  .profileCard__contactInner {
    align-items: center;
    gap: clamp(var(--space-xxs), 1vw, var(--space-xs));
  }

  .profileCard__contactIcon {
    display: inline-flex;
  }

  .profileCard__contactIcon .symbol {
    width: 30px;
    height: 30px;
    border-radius: 10px;
  }

  .profileCard__contactIcon .symbol[data-icon="asset"] .symbol__media img {
    width: 100%;
    height: 100%;
    position: absolute;
  }

  .profileCard__contactCopy {
    display: grid;
    gap: 2px;
  }

  .profileCard__contactHeading {
    font-size: var(--fs--1);
    font-weight: 600;
    letter-spacing: -0.01em;
    color: rgba(60, 60, 67, 0.9);
  }

  :global([data-theme="dark"]) .profileCard__contactHeading {
    color: rgba(235, 235, 245, 0.88);
  }

  .profileCard__contactValue {
    font-size: var(--fs--2);
    font-weight: 600;
    letter-spacing: -0.01em;
    color: rgba(60, 60, 67, 0.85);
    word-break: break-word;
  }

  :global([data-theme="dark"]) .profileCard__contactValue {
    color: rgba(235, 235, 245, 0.86);
  }

  .profileCard__summary {
    margin: 0;
    font-size: 16px;
    font-weight: 500; /* Medium - strengthens hero subtitle pairing */
    line-height: 1.55;
    max-width: 56ch;
  }

  :global([data-theme="dark"]) .profileCard__summary {
    color: rgba(235, 235, 245, 0.85);
  }

  :global([data-theme="light"]) .profileCard__summary {
    color: rgba(60, 60, 67, 0.85);
  }

  .profileCard__socialArea--desktop {
    display: grid;
    gap: clamp(var(--space-sm), 2vw, var(--space-md));
  }

  .profileCard__socials {
    position: relative;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: clamp(var(--space-sm), 1.5vw, var(--space-md));
  }

  .profileCard__socialHeading {
    display: none;
    margin: 0 0 var(--space-xs);
    font-size: clamp(18px, 3.8vw, 20px);
    font-weight: 600;
    letter-spacing: -0.015em;
    color: var(--text);
  }

  .profileCard__socials::-webkit-scrollbar {
    display: none;
  }

  .profileCard__socials {
    scrollbar-width: none;
  }

  .profileCard__socialCard {
    display: block;
    min-height: 170px;
  }

  .profileCard__socialCard .card__inner {
    align-items: flex-start;
    gap: clamp(var(--space-sm), 1.5vw, var(--space-md));
  }

  .profileCard__socialCard .card__content {
    gap: var(--space-xs);
  }

  .profileCard__socialCard .card-title {
    font-size: clamp(16px, 1.15vw + 12px, 18px);
    font-weight: 600;
    letter-spacing: -0.012em;
    line-height: 1.3;
  }

  .profileCard__socialBody {
    margin: 0;
    font-size: var(--fs--1);
    line-height: 1.5;
    color: var(--muted);
  }

  .profileCard__socialCard .symbol {
    width: 56px;
    height: 56px;
    border-radius: 16px;
  }

  .profileCard__socials > .scrollIndicator {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .profileCard__socials > .scrollIndicator .scrollIndicator__arrow {
    pointer-events: auto;
  }

  .profileCard__socialArea--mobile {
    display: none;
  }


  @media (max-width: 1100px) {
    .profileCard {
      grid-template-columns: minmax(140px, 0.8fr) 1fr;
      gap: clamp(var(--space-sm), 2vw, var(--space-md));
    }
  }

  @media (max-width: 820px) {
    .profileCard {
      grid-template-columns: 1fr;
      gap: clamp(var(--space-sm), 2vw, var(--space-md));
      margin-bottom: clamp(var(--space-md), 6vw, var(--space-lg));
    }

    .profileCard__media {
      justify-content: flex-start;
    }

    .profileCard__photo {
      width: 118px;
      height: 118px;
      border-radius: 22px;
    }

    .profileCard__contactList {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    }
  }

  @media (max-width: 520px) {
    .profileCard {
      padding: clamp(var(--space-sm), 4vw, var(--space-md));
    }

    .profileCard__photo {
      width: 108px;
      height: 108px;
      border-radius: 20px;
    }

    .profileCard__contactList {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-xs);
    }

    .profileCard__contactCard {
      padding: clamp(var(--space-sm), 5vw, var(--space-md));
      min-width: 0;
    }

    .profileCard__contactValue {
      font-size: 12px;
    }

    .profileCard__socialArea--desktop {
      display: none;
    }

    .profileCard__socialHeading {
      display: block;
    }

    .profileCard__socialArea--mobile {
      display: grid;
      gap: clamp(var(--space-sm), 2vw, var(--space-md));
      margin-top: clamp(var(--space-md), 6vw, var(--space-lg));
    }

    .profileCard__scrollHint {
      margin-bottom: 0;
    }

    .profileCard__socials--mobile {
      display: flex;
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      overscroll-behavior-x: contain;
      scroll-snap-type: x mandatory;
      scroll-padding-inline: clamp(var(--space-sm), 6vw, var(--space-md));
      gap: var(--space-md);
      padding-inline: clamp(var(--space-sm), 6vw, var(--space-md));
      padding-bottom: var(--space-sm);
      margin-inline: calc(-1 * clamp(var(--space-sm), 6vw, var(--space-md)));
      scrollbar-width: none;
    }

    .profileCard__socials--mobile::-webkit-scrollbar {
      display: none;
    }

    .profileCard__socialArea--mobile .profileCard__socialCard {
      flex: 0 0 clamp(82%, 78vw, 260px);
      scroll-snap-align: start;
    }

    .profileCard__socialArea--mobile .profileCard__socialCard .card__inner {
      gap: var(--space-sm);
    }

    .profileCard__socialArea--mobile .profileCard__socialCard .card-title {
      font-size: 17px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .profileCard__socialCard {
      transition: none;
    }
    .profileCard__socials > .scrollIndicator {
      display: none;
    }
  }
</style>
