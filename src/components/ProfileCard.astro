---
import { Image } from "astro:assets";
import AvatarSrc from "../assets/avatar.png";

const {
  name = "Tulio Cunha",
  title = "Full Stack Developer",
  location = "Brazil",
  email = "contact@tuliocunha.dev",
} = Astro.props;

const contacts = [
  {
    label: "GitHub",
    value: "@tuliopc23",
    href: "https://github.com/tuliopc23",
  },
  {
    label: "Portfolio",
    value: "tuliocunha.dev",
    href: "https://www.tuliocunha.dev",
  },
  {
    label: "Instagram",
    value: "@tuliopinheirocunha",
    href: "https://instagram.com/tuliopinheirocunha",
  },
  {
    label: "LinkedIn",
    value: "linkedin.com/tuliopinheirocunha",
    href: "https://linkedin.com/in/tuliopinheirocunha",
  },
  {
    label: "Book time",
    value: "fantastical.app/tuliopinheirocunha",
    href: "https://fantastical.app/tuliopinheirocunha",
  },
];
---

<section class="profileCard" aria-label={`Profile information for ${name}`}>
  <div class="profileCard__media">
    <figure class="profileCard__photo">
      <Image
        src={AvatarSrc}
        alt={name}
        widths={[112, 132, 160]}
        sizes="(max-width: 520px) 112px, (max-width: 820px) 132px, 160px"
        formats={["avif", "webp"]}
        fit="cover"
      />
    </figure>
  </div>
  <div class="profileCard__content">
    <header class="profileCard__header">
      <p class="profileCard__eyebrow">Building native and web products</p>
      <h2 class="profileCard__name">{name}</h2>
      <p class="profileCard__title">{title}</p>
    </header>

    <dl class="profileCard__meta" aria-label="Key details">
      <div class="profileCard__metaItem">
        <dt>Location</dt>
        <dd>{location}</dd>
      </div>
      <div class="profileCard__metaItem">
        <dt>Email</dt>
        <dd><a href={`mailto:${email}`}>{email}</a></dd>
      </div>
    </dl>

    <p class="profileCard__summary">
      I'm a full stack developer who spends my days tinkering with high- and low-level
      programming to solve my problemsâ€”and yours if you let me.
    </p>

    <ul class="profileCard__contacts" aria-label="Ways to reach Tulio">
      {
        contacts.map((entry) => (
          <li>
            <a
              class="profileCard__chip"
              href={entry.href}
              target="_blank"
              rel="noreferrer noopener"
            >
              <span class="profileCard__chipLabel">{entry.label}</span>
              <span class="profileCard__chipValue">{entry.value}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
.profileCard {
    display: grid;
    grid-template-columns: minmax(148px, 168px) 1fr;
    gap: 16px;
    padding: 18px;
    border-radius: 16px;
    border: 1px solid color-mix(in oklch, var(--hairline) 60%, transparent);
    background: linear-gradient(
      160deg,
      color-mix(in oklch, var(--surface) 96%, transparent) 0%,
      color-mix(in oklch, var(--surface) 90%, rgba(100, 125, 255, 0.10)) 55%,
      color-mix(in oklch, var(--surface) 94%, transparent) 100%
    );
    backdrop-filter: blur(12px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.16);
    max-width: 880px;
  }

  .profileCard__media {
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }

  .profileCard__photo {
    position: relative;
    width: 148px;
    height: 148px;
    border-radius: 24px;
    border: 1px solid color-mix(in oklch, var(--hairline) 70%, transparent);
    overflow: hidden;
    margin: 0;
    background: color-mix(in oklch, var(--surface) 85%, transparent);
    box-shadow:
      inset 0 0 0 1px color-mix(in oklch, var(--hairline) 70%, transparent),
      0 10px 20px rgba(0, 0, 0, 0.18);
  }

  .profileCard__photo::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 30% 20%,
      rgba(255, 255, 255, 0.28),
      transparent 60%
    );
    pointer-events: none;
  }

  .profileCard__photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profileCard__content {
    display: grid;
    gap: 20px;
  }

  .profileCard__header {
    display: grid;
    gap: 6px;
  }

  .profileCard__eyebrow {
    margin: 0;
    font-size: var(--fs--2);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: color-mix(in oklch, var(--text) 58%, transparent);
  }

  .profileCard__name {
    margin: 0;
    font-size: clamp(24px, 1.6vw + 14px, 34px);
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text);
  }

  .profileCard__title {
    margin: 0;
    font-size: 17px;
    font-weight: 500;
    color: color-mix(in oklch, var(--text) 75%, transparent);
  }

  .profileCard__meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 12px 18px;
    margin: 0;
  }

  .profileCard__metaItem {
    display: grid;
    gap: 4px;
  }

  .profileCard__metaItem dt {
    font-size: var(--fs--2);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: color-mix(in oklch, var(--text) 58%, transparent);
    margin: 0;
  }

  .profileCard__metaItem dd {
    margin: 0;
    font-size: var(--fs--1);
    font-weight: 600;
    color: var(--text);
    word-break: break-word;
  }

  .profileCard__metaItem dd a {
    color: inherit;
  }

  .profileCard__summary {
    margin: 0;
    font-size: 16px;
    line-height: 1.55;
    color: color-mix(in oklch, var(--text) 85%, transparent);
    max-width: 56ch;
  }

  .profileCard__contacts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .profileCard__chip {
    display: grid;
    gap: 4px;
    border-radius: 16px;
    border: 1px solid color-mix(in oklch, var(--hairline) 60%, transparent);
    background: color-mix(in oklch, var(--surface) 84%, transparent);
    padding: 14px 16px;
    color: var(--text);
    text-decoration: none;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease,
      border-color 0.2s ease;
  }

  .profileCard__chip:hover {
    transform: translateY(-2px);
    border-color: color-mix(in oklch, var(--blue) 45%, transparent);
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.18);
  }

  .profileCard__chipLabel {
    font-size: var(--fs--2);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: color-mix(in oklch, var(--text) 60%, transparent);
  }

  .profileCard__chipValue {
    font-size: var(--fs--1);
    font-weight: 600;
    word-break: break-word;
  }

  @media (max-width: 1100px) {
    .profileCard {
      grid-template-columns: minmax(150px, 180px) 1fr;
      gap: 20px;
      padding: 24px;
    }

    .profileCard__photo {
      width: 150px;
      height: 150px;
    }
  }

  @media (max-width: 820px) {
    .profileCard {
      grid-template-columns: 1fr;
      padding: 22px;
      gap: 18px;
    }

    .profileCard__media {
      justify-content: flex-start;
    }

    .profileCard__photo {
      width: 132px;
      height: 132px;
      border-radius: 26px;
    }
  }

  @media (max-width: 520px) {
    .profileCard {
      padding: 18px;
    }

    .profileCard__photo {
      width: 112px;
      height: 112px;
      border-radius: 22px;
    }
  }
</style>
