---
import { Image } from "astro:assets";
import AvatarSrc from "../assets/avatar.png";
import BrandIcon from "./BrandIcon.astro";
import SFIcon from "./SFIcon.astro";
import { getBrandIcon } from "./brand-icons";

const {
  name = "Tulio Cunha",
  title = "Full Stack Developer",
  location = "Brazil",
  email = "contact@tuliocunha.dev",
} = Astro.props;

const contacts = [
  {
    label: "GitHub",
    value: "@tuliopc23",
    href: "https://github.com/tuliopc23",
    icon: "github",
  },
  {
    label: "Portfolio",
    value: "tuliocunha.dev",
    href: "https://www.tuliocunha.dev",
    icon: "globe",
  },
  {
    label: "Instagram",
    value: "@tuliopinheirocunha",
    href: "https://instagram.com/tuliopinheirocunha",
    icon: "instagram",
  },
  {
    label: "LinkedIn",
    value: "linkedin.com/tuliopinheirocunha",
    href: "https://linkedin.com/in/tuliopinheirocunha",
    icon: "linkedin",
  },
  {
    label: "Book time",
    value: "fantastical.app/tuliopinheirocunha",
    href: "https://fantastical.app/tuliopinheirocunha",
    icon: "calendar",
  },
];

const meta = [
  {
    label: "Location",
    value: location,
    icon: "pin",
  },
  {
    label: "Email",
    value: email,
    icon: "mail",
    href: `mailto:${email}`,
  },
];
---

<section class="profileCard" aria-label={`Profile information for ${name}`}>
  <div class="profileCard__media">
    <figure class="profileCard__photo">
      <Image
        src={AvatarSrc}
        alt={name}
        widths={[140, 168, 196]}
        sizes="(max-width: 520px) 140px, (max-width: 820px) 168px, 196px"
        formats={["avif", "webp"]}
        fit="cover"
        loading="eager"
        decoding="async"
      />
    </figure>
  </div>
  <div class="profileCard__content">
    <header class="profileCard__header">
      <p class="profileCard__eyebrow">Building native and web products</p>
      <h2 class="profileCard__name">{name}</h2>
      <p class="profileCard__title">{title}</p>
    </header>

    <dl class="profileCard__meta" aria-label="Key details">
      {
        meta.map((item) => (
          <div class="profileCard__metaItem">
            <dt>
              {item.icon && (
                <span class="profileCard__metaIcon" aria-hidden="true">
                  {getBrandIcon(item.icon) ? (
                    <BrandIcon name={item.icon} size={16} />
                  ) : (
                    <SFIcon name={item.icon} size={16} stroke={1.6} />
                  )}
                </span>
              )}
              <span class="profileCard__metaLabel">{item.label}</span>
            </dt>
            <dd>{item.href ? <a href={item.href}>{item.value}</a> : item.value}</dd>
          </div>
        ))
      }
    </dl>

    <p class="profileCard__summary">
      I'm a full stack developer who spends my days tinkering with high- and low-level
      programming to solve my problemsâ€”and yours if you let me.
    </p>

    <ul
      class="profileCard__contacts profileCard__contactsDesktop"
      aria-label="Ways to reach Tulio"
    >
      {
        contacts.map((entry) => (
          <li>
            <a
              class="profileCard__chip"
              href={entry.href}
              target="_blank"
              rel="noreferrer noopener"
            >
              {entry.icon && (
                <span class="profileCard__chipIcon" aria-hidden="true">
                  {getBrandIcon(entry.icon) ? (
                    <BrandIcon name={entry.icon} size={18} />
                  ) : (
                    <SFIcon name={entry.icon} size={18} stroke={1.6} />
                  )}
                </span>
              )}
              <span class="profileCard__chipContent">
                <span class="profileCard__chipLabel">{entry.label}</span>
                <span class="profileCard__chipValue">{entry.value}</span>
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<ul class="profileCardContactsMobile cardRail" aria-label="Ways to reach Tulio">
  {
    contacts.map((entry) => (
      <li>
        <a
          class="profileCard__chip"
          href={entry.href}
          target="_blank"
          rel="noreferrer noopener"
        >
          {entry.icon && (
            <span class="profileCard__chipIcon" aria-hidden="true">
              {getBrandIcon(entry.icon) ? (
                <BrandIcon name={entry.icon} size={18} />
              ) : (
                <SFIcon name={entry.icon} size={18} stroke={1.6} />
              )}
            </span>
          )}
          <span class="profileCard__chipContent">
            <span class="profileCard__chipLabel">{entry.label}</span>
            <span class="profileCard__chipValue">{entry.value}</span>
          </span>
        </a>
      </li>
    ))
  }
</ul>

<style>
  .profileCard {
    display: grid;
    grid-template-columns: clamp(168px, 18vw, 196px) 1fr;
    gap: var(--space-lg);
    padding: clamp(var(--space-md), 4vw, var(--space-lg));
    border-radius: var(--radius-lg);
    border: 1px solid var(--panel-border);
    background: color-mix(in oklch, var(--surface-elevated) 94%, transparent);
    backdrop-filter: saturate(1.8) blur(20px);
    max-width: 100%;
    box-shadow: var(--shadow-card);
  }

  [data-theme="light"] .profileCard {
    background: color-mix(in oklch, var(--surface-elevated) 96%, transparent);
    box-shadow: var(--shadow-card-hover);
  }

  [data-theme="dark"] .profileCard {
    box-shadow: var(--shadow-card);
  }

  .profileCard__media {
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }

  .profileCard__photo {
    position: relative;
    width: clamp(140px, 18vw, 196px);
    height: clamp(140px, 18vw, 196px);
    border-radius: 24px;
    border: 1px solid var(--panel-border);
    overflow: hidden;
    margin: 0;
    background: color-mix(in oklch, var(--surface-elevated) 92%, transparent);
  }

  [data-theme="light"] .profileCard__photo {
    box-shadow:
      0 12px 22px rgba(31, 35, 53, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.75);
  }

  [data-theme="dark"] .profileCard__photo {
    box-shadow:
      0 12px 24px rgba(0, 0, 0, 0.45),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  .profileCard__photo::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 30% 20%,
      rgba(255, 255, 255, 0.28),
      transparent 60%
    );
    pointer-events: none;
  }

  .profileCard__photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profileCard__content {
    display: grid;
    gap: var(--space-md);
  }

  .profileCard__header {
    display: grid;
    gap: var(--space-xxs);
  }

  .profileCard__eyebrow {
    margin: 0;
    font-size: var(--fs--2);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: color-mix(in oklch, var(--text) 58%, transparent);
  }

  .profileCard__name {
    margin: 0;
    font-size: clamp(26px, 1.8vw + 16px, 38px);
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text);
  }

  .profileCard__title {
    margin: 0;
    font-size: 17px;
    font-weight: 500;
    color: color-mix(in oklch, var(--text) 75%, transparent);
  }

  .profileCard__meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-xs) var(--space-md);
    margin: 0;
  }

  .profileCard__metaItem {
    display: grid;
    gap: var(--space-xxs);
  }

  .profileCard__metaItem dt {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin: 0;
    font-size: var(--fs--2);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: color-mix(in oklch, var(--text) 65%, transparent);
  }

  .profileCard__metaLabel {
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  .profileCard__metaItem dd {
    margin: 0;
    font-size: var(--fs--1);
    font-weight: 600;
    color: var(--text);
    word-break: break-word;
  }

  .profileCard__metaItem dd a {
    color: inherit;
    text-decoration: none;
  }

  .profileCard__metaItem dd a:hover {
    text-decoration: underline;
  }

  .profileCard__metaIcon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 12px;
    border: 1px solid var(--panel-border);
    background: color-mix(in oklch, var(--surface-elevated) 92%, transparent);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.12),
      0 6px 12px rgba(0, 0, 0, 0.14);
    color: color-mix(in oklch, var(--text) 78%, transparent);
  }

  .profileCard__metaIcon :global(svg) {
    width: 16px;
    height: 16px;
  }

  .profileCard__summary {
    margin: 0;
    font-size: 16px;
    line-height: 1.55;
    color: color-mix(in oklch, var(--text) 85%, transparent);
    max-width: 56ch;
  }

  .profileCard__contacts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-sm);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .profileCardContactsMobile {
    display: none;
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0 0;
  }

  .profileCardContactsMobile li {
    display: flex;
  }

  .profileCard__chip {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: var(--space-sm);
    border-radius: var(--radius-md);
    border: 1px solid var(--panel-border);
    background: color-mix(in oklch, var(--surface-elevated) 92%, transparent);
    padding: var(--space-sm) var(--space-md);
    color: var(--text);
    text-decoration: none;
    transition:
      transform 0.16s cubic-bezier(0.22, 0.61, 0.36, 1),
      box-shadow 0.16s cubic-bezier(0.22, 0.61, 0.36, 1),
      border-color 0.16s cubic-bezier(0.22, 0.61, 0.36, 1),
      background 0.16s cubic-bezier(0.22, 0.61, 0.36, 1);
  }

  .profileCard__chip:hover {
    transform: translateY(-3px);
    background: color-mix(
      in oklch,
      var(--surface-elevated) 94%,
      rgba(255, 255, 255, 0.05)
    );
    border-color: var(--panel-border-strong);
    box-shadow: 0 16px 30px rgba(0, 0, 0, 0.18);
  }

  .profileCard__chipIcon {
    display: grid;
    place-items: center;
    width: 34px;
    height: 34px;
    border-radius: 14px;
    border: 1px solid var(--panel-border);
    background: color-mix(in oklch, var(--surface-elevated) 94%, transparent);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.14),
      0 8px 16px rgba(0, 0, 0, 0.16);
    color: color-mix(in oklch, var(--text) 78%, transparent);
  }

  .profileCard__chipIcon :global(svg) {
    width: 18px;
    height: 18px;
  }

  .profileCard__chipContent {
    display: grid;
    gap: 2px;
  }

  .profileCard__chipLabel {
    font-size: var(--fs--2);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: color-mix(in oklch, var(--text) 60%, transparent);
  }

  .profileCard__chipValue {
    font-size: var(--fs--1);
    font-weight: 600;
    word-break: break-word;
  }

  [data-theme="light"] .profileCard__chip {
    background: color-mix(in oklch, var(--surface-elevated) 96%, transparent);
    box-shadow: 0 14px 28px rgba(31, 35, 53, 0.12);
  }

  [data-theme="dark"] .profileCard__chip {
    box-shadow: 0 14px 28px rgba(0, 0, 0, 0.34);
  }

  @media (max-width: 1100px) {
    .profileCard {
      grid-template-columns: minmax(160px, 1fr) 1fr;
      gap: var(--space-md);
    }
  }

  @media (max-width: 820px) {
    .profileCard {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .profileCard__media {
      justify-content: flex-start;
    }

    .profileCard__photo {
      width: 132px;
      height: 132px;
      border-radius: 26px;
    }
  }

  @media (max-width: 520px) {
    .profileCard {
      padding: var(--space-md);
    }

    .profileCard__photo {
      width: 112px;
      height: 112px;
      border-radius: 22px;
    }

    .profileCard__meta {
      grid-template-columns: 1fr;
    }

    .profileCard__contactsDesktop {
      display: none;
    }

    .profileCardContactsMobile {
      display: flex;
      gap: var(--space-sm);
      overflow-x: auto;
      padding: 0 var(--space-sm) var(--space-md);
      margin-inline: calc(-1 * var(--space-sm));
      scrollbar-width: none;
    }

    .profileCardContactsMobile::-webkit-scrollbar {
      display: none;
    }

    .profileCardContactsMobile li {
      flex: 0 0 min(74vw, 240px);
    }
  }
</style>
