---
import SFIcon from "./SFIcon.astro";

interface BreadcrumbItem {
  label: string;
  href?: string;
  icon?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props as Props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb navigation">
  <ol class="breadcrumbs__list">
    {
      items.map((item, index) => (
        <li class="breadcrumbs__item">
          {index > 0 && (
            <SFIcon
              name="chevron-right"
              size={14}
              stroke={1.5}
              class="breadcrumbs__separator"
            />
          )}
          {item.href ? (
            <a href={item.href} class="breadcrumbs__link">
              {item.icon && (
                <span class="breadcrumbs__icon" aria-hidden="true">
                  <SFIcon name={item.icon} size={16} stroke={1.6} />
                </span>
              )}
              <span>{item.label}</span>
            </a>
          ) : (
            <span class="breadcrumbs__current" aria-current="page">
              {item.icon && (
                <span class="breadcrumbs__icon" aria-hidden="true">
                  <SFIcon name={item.icon} size={16} stroke={1.6} />
                </span>
              )}
              <span>{item.label}</span>
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<style>
  .breadcrumbs {
    margin-bottom: var(--space-md);
    animation: breadcrumb-reveal 160ms var(--motion-ease-out) both;
  }

  .breadcrumbs__list {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin: 0;
    padding: 0;
    list-style: none;
    font-size: var(--fs--1);
  }

  .breadcrumbs__item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .breadcrumbs__separator {
    color: var(--muted);
    opacity: 0.6;
  }

  .breadcrumbs__link {
    color: var(--muted);
    text-decoration: none;
    transition: color var(--motion-duration-sm) var(--motion-ease-out);
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .breadcrumbs__link:hover {
    color: var(--text);
  }

  .breadcrumbs__current {
    color: var(--text);
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .breadcrumbs__link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
    border-radius: 4px;
  }

  .breadcrumbs__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--muted);
  }

  .breadcrumbs__current .breadcrumbs__icon {
    color: var(--text);
  }

  @keyframes breadcrumb-reveal {
    from {
      opacity: 0;
      transform: translateY(-6px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .breadcrumbs {
      animation: none;
    }
  }
</style>
