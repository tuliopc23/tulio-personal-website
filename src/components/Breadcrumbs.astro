---
import SFIcon from "./SFIcon.astro";

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items }: Props = Astro.props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb navigation">
  <ol class="breadcrumbs__list">
    {
      items.map((item, index) => (
        <li class="breadcrumbs__item">
          {index > 0 && (
            <SFIcon
              name="chevron-right"
              size={14}
              stroke={1.5}
              class="breadcrumbs__separator"
            />
          )}
          {item.href ? (
            <a href={item.href} class="breadcrumbs__link">
              {item.label}
            </a>
          ) : (
            <span class="breadcrumbs__current" aria-current="page">
              {item.label}
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<style>
  .breadcrumbs {
    margin-bottom: var(--space-md);
  }

  .breadcrumbs__list {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin: 0;
    padding: 0;
    list-style: none;
    font-size: var(--fs--1);
  }

  .breadcrumbs__item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .breadcrumbs__separator {
    color: var(--muted);
    opacity: 0.6;
  }

  .breadcrumbs__link {
    color: var(--muted);
    text-decoration: none;
    transition: color var(--motion-duration-sm) var(--motion-ease-out);
  }

  .breadcrumbs__link:hover {
    color: var(--text);
  }

  .breadcrumbs__current {
    color: var(--text);
    font-weight: 500;
  }

  .breadcrumbs__link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
    border-radius: 4px;
  }
</style>
