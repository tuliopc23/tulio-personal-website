---
import { getAllCategories } from "../sanity/lib/posts";

const categories = await getAllCategories();
---

{
  categories.length > 0 && (
    <section class="categoryList" data-reveal data-reveal-group="categories">
      <div class="categoryList__header">
        <h2 class="categoryList__title">Browse by Category</h2>
      </div>
      <div class="categoryList__grid">
        {categories.map((category) => (
          <a href={`/blog/category/${category.slug}/`} class="categoryCard">
            <h3 class="categoryCard__title">{category.title}</h3>
            {category.description && (
              <p class="categoryCard__description">{category.description}</p>
            )}
            <span class="categoryCard__cta">
              <span>View articles</span>
              <svg
                width="16"
                height="16"
                viewBox="0 0 16 16"
                fill="none"
                aria-hidden="true"
              >
                <path
                  d="M6 12l4-4-4-4"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </section>
  )
}

<style>
  .categoryList {
    padding-block: var(--space-xl);
  }

  .categoryList__header {
    text-align: center;
    margin-bottom: var(--space-lg);
  }

  .categoryList__title {
    font-size: var(--fs-3);
    font-weight: 700;
    color: var(--text);
    margin: 0;
  }

  .categoryList__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 280px), 1fr));
    gap: var(--space-md);
  }

  .categoryCard {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-lg);
    background: var(--surface);
    border: 1px solid var(--hairline);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all 0.2s;
    position: relative;
    overflow: hidden;
  }

  .categoryCard::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s;
  }

  .categoryCard:hover::before {
    transform: scaleX(1);
  }

  .categoryCard:hover {
    background: var(--surface-hover);
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .categoryCard__title {
    font-size: var(--fs-1);
    font-weight: 600;
    color: var(--text);
    margin: 0;
  }

  .categoryCard__description {
    font-size: var(--fs--1);
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
    flex: 1;
  }

  .categoryCard__cta {
    display: flex;
    align-items: center;
    gap: var(--space-2xs);
    font-size: var(--fs--1);
    font-weight: 500;
    color: var(--accent);
    margin-top: var(--space-xs);
  }

  .categoryCard:hover .categoryCard__cta {
    color: var(--accent-bright);
  }

  .categoryCard:hover .categoryCard__cta svg {
    transform: translateX(2px);
  }

  .categoryCard__cta svg {
    transition: transform 0.2s;
  }

  @media (prefers-reduced-motion: reduce) {
    .categoryCard {
      transition: none;
    }

    .categoryCard:hover {
      transform: none;
    }

    .categoryCard::before,
    .categoryCard__cta svg {
      transition: none;
    }
  }

  @media (min-width: 768px) {
    .categoryList__title {
      font-size: var(--fs-4);
    }

    .categoryList__grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
  }
</style>
