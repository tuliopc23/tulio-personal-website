---
const {
  href = "#",
  title = "Card title",
  body = "",
  tint = "blue",
  cta = "Read more →",
  icon = null,
} = Astro.props;
import IconTile from "./IconTile.astro";
---

<a class="card" href={href}>
  <div style="display:flex;gap:12px;align-items:flex-start">
    <IconTile tint={tint} label={title} icon={icon} />
    <div style="flex:1">
      <div class="card-title">{title}</div>
      <p class="card-body">{body}</p>
{
        cta && (
          <span style="color:var(--link);font-weight:600;font-size:var(--fs--2);letter-spacing:0.04em;text-transform:uppercase;">
            {cta.replace(' →', '')}
          </span>
        )
      }
    </div>
  </div>
</a>
