---
// Skeleton loading card component
---

<div class="skeleton-card" aria-hidden="true">
  <div class="skeleton-card__inner">
    <div class="skeleton-card__icon"></div>
    <div class="skeleton-card__content">
      <div class="skeleton-card__title"></div>
      <div class="skeleton-card__body"></div>
      <div class="skeleton-card__cta"></div>
    </div>
  </div>
</div>

<style>
  .skeleton-card {
    border-radius: var(--radius-lg);
    border: 1px solid var(--panel-border);
    padding: var(--space-md);
    background: var(--card-bg);
    box-shadow: var(--shadow-card);
    animation: skeleton-pulse 1.5s ease-in-out infinite;
  }

  .skeleton-card__inner {
    display: flex;
    gap: var(--space-sm);
    align-items: flex-start;
  }

  .skeleton-card__icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: color-mix(in oklch, var(--surface-elevated) 80%, transparent);
  }

  .skeleton-card__content {
    display: grid;
    gap: var(--space-xs);
    flex: 1;
    min-width: 0;
  }

  .skeleton-card__title {
    height: 24px;
    border-radius: 4px;
    background: color-mix(in oklch, var(--surface-elevated) 80%, transparent);
    width: 70%;
  }

  .skeleton-card__body {
    height: 16px;
    border-radius: 4px;
    background: color-mix(in oklch, var(--surface-elevated) 80%, transparent);
    width: 100%;
  }

  .skeleton-card__cta {
    height: 14px;
    border-radius: 4px;
    background: color-mix(in oklch, var(--surface-elevated) 80%, transparent);
    width: 40%;
    margin-top: var(--space-xs);
  }

  @keyframes skeleton-pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .skeleton-card {
      animation: none;
    }
  }
</style>
