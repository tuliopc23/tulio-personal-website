---
const { href = "#", title = "Post", summary = "Summary", date = "", tint = "indigo" } = Astro.props;
---

<a class="card" href={href}>
  <div class="card__inner">
    <IconTile tint={tint} label={title} />
    <div class="card__content">
      <div class="card-title">{title}</div>
      <p class="card-body">{summary}</p>
      {date && <span class="card__meta">{date}</span>}
    </div>
  </div>
</a>
