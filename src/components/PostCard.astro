---
const {
  href = "#",
  title = "Post",
  summary = "Summary",
  date = "",
  tint = "indigo",
} = Astro.props;
import IconTile from "./IconTile.astro";
---

<a class="card" href={href}>
  <div style="display:flex;gap:12px;align-items:flex-start">
    <IconTile tint={tint} label={title} />
    <div style="flex:1">
      <div class="card-title">{title}</div>
      <p class="card-body">{summary}</p>
      {date && <span style="color:var(--muted);font-size:var(--fs--2)">{date}</span>}
    </div>
  </div>
</a>
